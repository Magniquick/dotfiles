#!/usr/bin/env bash

tmp_dir="/tmp/cliphist"
rm -rf "$tmp_dir"
size=64

if [[ -n "$1" ]]; then
	cliphist decode <<<"$ROFI_INFO	$1" | wl-copy
	exit
fi

mkdir -p "$tmp_dir"

read -r -d '' prog <<EOF
/^[0-9]+\s<meta http-equiv=/ { next }
match(\$0, /^([0-9]+)\s(\[\[\s)?binary.*(jpg|jpeg|png|bmp)/, grp) {
	system("echo " grp[1] "\\\\\t | cliphist decode | magick - -resize "$size"x"$size"^ -gravity center -extent "$size"x"$size"^ -unsharp 0x0.6+0.6+0.02 -strip $tmp_dir/"grp[1]"."grp[3])
	print \$0"\0icon\x1f$tmp_dir/"grp[1]"."grp[3]
	next
}
1
EOF

cliphist list | gawk "$prog" | awk '{rest = $2; for (i=3; i<=NF; i++) rest = rest OFS $i; print rest "\0info\x1f" $1}' OFS=" " IFS="\t"
